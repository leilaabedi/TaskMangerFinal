<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    tools:context=".fragment.TaskDetailFragment">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">


        <TextView
            android:id="@+id/task_text_view_title"
            style="?android:listSeparatorTextViewStyle"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginStart="10dp"
            android:layout_marginTop="4dp"
            android:layout_marginEnd="10dp"
            android:padding="5dp"
            android:text="@string/task_title"
            android:textSize="12sp"
            android:textStyle="bold"></TextView>

        <EditText
            android:id="@+id/task_edit_text_title"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@id/task_text_view_title"
            android:layout_marginStart="10dp"
            android:layout_marginEnd="10dp"
            android:hint="@string/task_title"
            android:inputType="text"
            android:maxLength="30"
            android:padding="12dp"
            android:paddingStart="8dp"
            android:paddingLeft="8dp"
            android:textSize="14sp"></EditText>

        <TextView
            android:id="@+id/task_text_view_details"
            style="?android:listSeparatorTextViewStyle"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@id/task_edit_text_title"
            android:layout_marginStart="10dp"
            android:layout_marginTop="4dp"
            android:layout_marginEnd="10dp"
            android:padding="5dp"
            android:text="@string/task_description"
            android:textSize="12sp"
            android:textStyle="bold"></TextView>

        <EditText
            android:id="@+id/task_edit_text_description"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@id/task_text_view_details"
            android:layout_marginStart="10dp"
            android:layout_marginEnd="10dp"
            android:hint="@string/task_description"
            android:inputType="textCapSentences|textNoSuggestions|textMultiLine"
            android:lines="3"
            android:maxLines="3"
            android:minLines="1"
            android:padding="12dp"
            android:scrollbars="vertical"
            android:textSize="14sp" />

        <Button
            android:id="@+id/task_button_date"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@id/task_edit_text_description"
            android:layout_marginStart="11dp"
            android:layout_marginTop="16dp"
            android:layout_marginEnd="11dp"
            android:textAllCaps="false"
            android:textSize="14sp" />

        <Button
            android:id="@+id/task_button_time"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@id/task_button_date"
            android:layout_marginStart="11dp"
            android:layout_marginTop="16dp"
            android:layout_marginEnd="11dp"
            android:textAllCaps="false"
            android:textSize="14sp" />

        <CheckBox
            android:id="@+id/task_checkbox_state"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@id/task_button_time"
            android:layout_marginStart="10dp"
            android:layout_marginLeft="10dp"
            android:layout_marginTop="16dp"
            android:text="State"
            android:textSize="12sp" />
    </RelativeLayout>

</ScrollView>